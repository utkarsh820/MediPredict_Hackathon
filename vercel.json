{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "installCommand": "pip install --no-cache-dir -r vercel-requirements.txt",
        "maxLambdaSize": "15mb",
        "includeFiles": ["models/cat_disease_model.pkl", "models/label_encoder.pkl", "data/processed/cleaned_data.csv"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}
